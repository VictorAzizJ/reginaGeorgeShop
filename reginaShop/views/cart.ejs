
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Cart page</title>
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<head>
    <body>
        <header>
            <nav>
                <ul>
                    <li>
                        <a href="/inventory">Back to shopping!</a>
                    </li>
                    <li>
                        <a href="/checkout">Pay and check out!</a>
                    </li>
                </ul>
            </nav>
        </header>
        <ul class="cartSection">
            <% for(var i=0; i<cart.length; i++) {%>
                <li class="message <%= cart[i].priority %>">
                    <span id="storeItem" name="storeItemName">
                        <%= cart[i].item %>
                    </span>
                    <span>
                        <%= cart[i].description %>
                    </span>
                    <img src="<%= cart[i].image %>" alt="<%= cart[i].title %>">
                    <span class="hidden" id="storeItemId" name="storeItemIdVal">
                        <%= cart[i].id %>
                    </span>
                    <span>
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </span>
                    <span>
                        <i class="fa fa-cart-plus fa-2x" aria-hidden="true"></i>
                    </span>
                    <% } %>
        </ul>


        <script src="main.js"></script>
    </body>